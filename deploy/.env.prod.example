POSTGRES_PASSWORD=ALTERE_SENHA_SEGURA
POSTGRES_USER=postgres
POSTGRES_DB=whiteboard

DATABASE_URL=postgresql://postgres:ALTERE_SENHA_SEGURA@postgres:5432/whiteboard
