JWT_SECRET=COLOQUE_SEGREDO_FORTE_32_CHARS_MINIMO

# Domínio público (ajuste se usar outro)
CORS_ORIGIN=https://all.tickello.com.br
LOG_LEVEL=info

# URL da API para o frontend (usado no build do web)
VITE_API_URL=https://all.tickello.com.br/api
